@model PetBoardingApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <main class="w-full max-w-md mx-auto p-4 md:p-6 lg:p-8">
        <div class="bg-white rounded-xl shadow-lg p-6 sm:p-8 md:p-10 border border-gray-200">
            <h2 class="text-3xl font-extrabold text-gray-900 mb-2 text-center" id="title">@ViewBag.Title</h2>
            <p class="text-center text-gray-600 mb-8">Create a new account to get started.</p>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "space-y-6" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-red-500 text-sm mb-4 p-2 bg-red-50 border border-red-200 rounded-md" })

                <div class="mb-5">
                    @Html.LabelFor(m => m.Email, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-input block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "you@example.com", type = "email", required = "required", autocomplete = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-xs mt-1 block" })
                </div>

                <div class="mb-5">
                    @Html.LabelFor(m => m.Password, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-input block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "••••••••", required = "required", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-xs mt-1 block" })
                </div>

                <div class="mb-8">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "••••••••", required = "required", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-xs mt-1 block" })
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
                        Register
                    </button>
                </div>
            }
        </div>
    </main>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
